<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_gray_F8F8F8F8"
    android:orientation="vertical">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:overScrollMode="never">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_btn_main_userdata"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_30"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingVertical="@dimen/dp_20"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/iv_main_userhead"
                    android:layout_width="20dp"
                    android:layout_height="22dp"
                    android:layout_marginStart="@dimen/dp_30"
                    android:layout_marginEnd="@dimen/dp_10"
                    android:src="@mipmap/icon_main_phone" />

                <TextView
                    android:id="@+id/tv_main_username"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/text_main_phonenum"
                    android:textColor="@color/black33333"
                    android:textSize="@dimen/sp_16" />

                <ImageView
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:src="@mipmap/img_ioc_break_right_enter"
                    android:visibility="gone" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_20"
                android:background="@drawable/bg_white_radius_8dp"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ll_btn_main_userdata">

                <com.hjq.widget.layout.SettingBar
                    android:id="@+id/sb_btn_main_personal"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_48"
                    android:clickable="true"
                    android:focusable="true"
                    android:visibility="gone"
                    app:bar_leftDrawable="@mipmap/img_ioc_main_personal"
                    app:bar_leftDrawableSize="@dimen/dp_20"
                    app:bar_leftText="@string/personal_data_title"
                    app:bar_leftTextSize="@dimen/sp_14"
                    app:bar_rightDrawable="@drawable/arrows_right_ic" />

                <com.hjq.widget.layout.SettingBar
                    android:id="@+id/sb_btn_main_updatepwd"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_48"
                    android:clickable="true"
                    android:focusable="true"
                    app:bar_leftDrawable="@mipmap/icon_mine_setting_password"
                    app:bar_leftDrawableSize="@dimen/dp_18"
                    app:bar_leftText="@string/setting_password"
                    app:bar_rightDrawable="@drawable/arrows_right_ic" />

                <com.hjq.widget.layout.SettingBar
                    android:id="@+id/sb_btn_main_construction"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_48"
                    android:clickable="true"
                    android:focusable="true"
                    app:bar_leftDrawable="@mipmap/icon_mine_construction"
                    app:bar_leftDrawableSize="@dimen/dp_18"
                    app:bar_leftText="@string/title_main_construction"
                    app:bar_rightDrawable="@drawable/arrows_right_ic" />

                <com.hjq.widget.layout.SettingBar
                    android:id="@+id/sb_btn_main_myservice"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_48"
                    android:clickable="true"
                    android:focusable="true"
                    android:visibility="gone"
                    app:bar_leftDrawable="@mipmap/img_ioc_main_service"
                    app:bar_leftDrawableSize="@dimen/dp_17"
                    app:bar_leftText="@string/title_main_myservice"
                    app:bar_leftTextSize="@dimen/sp_14"
                    app:bar_rightDrawable="@drawable/arrows_right_ic" />

                <com.hjq.widget.layout.SettingBar
                    android:id="@+id/sb_btn_main_aboutus"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_48"
                    android:clickable="true"
                    android:focusable="true"
                    android:visibility="gone"
                    app:bar_leftDrawable="@mipmap/img_ioc_main_aboutus"
                    app:bar_leftDrawableSize="@dimen/dp_18"
                    app:bar_leftText="@string/title_main_aboutus"
                    app:bar_leftTextSize="@dimen/sp_14"
                    app:bar_rightDrawable="@drawable/arrows_right_ic" />

                <com.hjq.widget.layout.SettingBar
                    android:id="@+id/sb_btn_main_agreement"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_48"
                    android:clickable="true"
                    android:focusable="true"
                    android:visibility="gone"
                    app:bar_leftDrawable="@mipmap/img_ioc_main_agreement"
                    app:bar_leftDrawableSize="@dimen/dp_18"
                    app:bar_leftText="@string/setting_agreement"
                    app:bar_leftTextSize="@dimen/sp_14"
                    app:bar_rightDrawable="@drawable/arrows_right_ic" />

                <com.hjq.widget.layout.SettingBar
                    android:id="@+id/sb_btn_main_privacy"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_48"
                    android:clickable="true"
                    android:focusable="true"
                    app:bar_leftDrawable="@mipmap/img_ioc_checkupdates"
                    app:bar_leftDrawableSize="@dimen/dp_20"
                    app:bar_leftText="@string/title_main_checkupdates"
                    app:bar_leftTextSize="@dimen/sp_14"
                    app:bar_rightDrawable="@drawable/arrows_right_ic" />

                <com.hjq.widget.layout.SettingBar
                    android:id="@+id/sb_btn_mine_logout"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_48"
                    android:clickable="true"
                    android:focusable="true"
                    app:bar_leftDrawable="@mipmap/img_ioc_checkupdates"
                    app:bar_leftDrawableSize="@dimen/dp_20"
                    app:bar_leftText="@string/setting_exit"
                    app:bar_leftTextSize="@dimen/sp_14"
                    app:bar_rightDrawable="@drawable/arrows_right_ic" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:text="@string/about_author"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ll_2" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>