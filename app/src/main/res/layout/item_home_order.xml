<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp_5"
    android:background="@drawable/bg_white_radius_4dp"
    android:padding="@dimen/dp_10">

    <TextView
        android:id="@+id/tv_item_home_order_storename"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_10"
        android:text="@string/text_home_storename"
        android:textColor="@color/black33333"
        android:textSize="@dimen/sp_14"
        app:layout_constraintEnd_toStartOf="@id/tv_item_home_order_ordertype"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_item_home_order_ordertype"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_home_ordertype"
        android:textColor="@color/black33333"
        android:textSize="@dimen/sp_14"
        app:layout_constraintBottom_toBottomOf="@id/tv_item_home_order_storename"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_item_home_order_storename"
        app:layout_constraintTop_toTopOf="@id/tv_item_home_order_storename" />

    <TextView
        android:id="@+id/tv_item_home_order_storeaddress"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_10"
        android:text="@string/text_home_storeaddress"
        android:textColor="@color/black33333"
        android:textSize="@dimen/sp_14"
        app:layout_constraintEnd_toStartOf="@id/tv_home_order_acceptorder"
        app:layout_constraintStart_toStartOf="@id/tv_item_home_order_storename"
        app:layout_constraintTop_toBottomOf="@id/tv_item_home_order_storename" />

    <TextView
        android:id="@+id/tv_home_order_acceptorder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_10"
        android:background="@drawable/bg_blue_radius_8dp"
        android:paddingHorizontal="@dimen/dp_10"
        android:paddingVertical="@dimen/dp_5"
        android:text="@string/btn_home_acceptorder"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_14"
        app:layout_constraintBottom_toBottomOf="@id/tv_item_home_order_storeaddress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_item_home_order_storeaddress" />

</androidx.constraintlayout.widget.ConstraintLayout>