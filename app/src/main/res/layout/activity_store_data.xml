<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_gray_F8F8F8F8"
    android:orientation="vertical">

    <com.hjq.bar.TitleBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="@string/title_main_store"
        app:titleSize="@dimen/sp_16" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@drawable/bg_white_radius_4dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_10"
                    android:text="@string/text_store_data_storename"
                    android:textColor="@color/black33333"
                    android:textSize="@dimen/sp_14" />

                <com.hjq.widget.view.ClearEditText
                    android:id="@+id/et_store_data_storename"
                    style="@style/EditTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:hint="@string/input_store_data_storename"
                    android:maxLength="11"
                    android:paddingVertical="@dimen/dp_10"
                    android:singleLine="true"
                    android:textColor="@color/black33333"
                    android:textColorHint="@color/text_gray_E5E5E5"
                    android:textSize="@dimen/sp_14" />

            </LinearLayout>

            <com.hjq.widget.layout.SettingBar
                android:id="@+id/sb_btn_store_data_industry"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:layout_marginHorizontal="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@drawable/bg_white_radius_8dp"
                android:clickable="true"
                android:focusable="true"
                app:bar_leftText="@string/text_store_data_industry"
                app:bar_leftTextSize="@dimen/sp_14"
                app:bar_rightDrawable="@drawable/arrows_right_ic" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@drawable/bg_white_radius_4dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_10"
                    android:text="@string/text_store_data_principal"
                    android:textColor="@color/black33333"
                    android:textSize="@dimen/sp_14" />

                <com.hjq.widget.view.ClearEditText
                    android:id="@+id/et_store_data_principal"
                    style="@style/EditTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:hint="@string/input_store_data_principal"
                    android:maxLength="11"
                    android:paddingVertical="@dimen/dp_10"
                    android:singleLine="true"
                    android:textColor="@color/black33333"
                    android:textColorHint="@color/text_gray_E5E5E5"
                    android:textSize="@dimen/sp_14" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@drawable/bg_white_radius_4dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_10"
                    android:text="@string/text_store_data_principal_tel"
                    android:textColor="@color/black33333"
                    android:textSize="@dimen/sp_14" />

                <com.hjq.widget.view.ClearEditText
                    android:id="@+id/et_store_data_principal_tel"
                    style="@style/EditTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:hint="@string/input_store_data_principal_tel"
                    android:maxLength="11"
                    android:paddingVertical="@dimen/dp_10"
                    android:singleLine="true"
                    android:textColor="@color/black33333"
                    android:textColorHint="@color/text_gray_E5E5E5"
                    android:textSize="@dimen/sp_14" />

            </LinearLayout>

            <com.hjq.widget.layout.SettingBar
                android:id="@+id/sb_btn_store_data_location"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:layout_marginHorizontal="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@drawable/bg_white_radius_8dp"
                android:clickable="true"
                android:focusable="true"
                app:bar_leftText="@string/text_store_data_location"
                app:bar_leftTextSize="@dimen/sp_14"
                app:bar_rightDrawable="@drawable/arrows_right_ic" />

            <com.hjq.widget.layout.SettingBar
                android:id="@+id/sb_btn_store_data_merchantaddress"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:layout_marginHorizontal="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@drawable/bg_white_radius_8dp"
                android:clickable="true"
                android:focusable="true"
                app:bar_leftText="@string/text_store_data_merchantaddress"
                app:bar_leftTextSize="@dimen/sp_14"
                app:bar_rightDrawable="@mipmap/img_ioc_location"
                app:bar_rightDrawableSize="@dimen/dp_25"
                android:visibility="gone"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:layout_marginHorizontal="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@drawable/bg_white_radius_4dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_10"
                    android:text="@string/text_store_data_merchantaddress"
                    android:textColor="@color/black33333"
                    android:textSize="@dimen/sp_14" />

                <com.hjq.widget.view.RegexEditText
                    android:id="@+id/et_store_data_merchantaddress"
                    style="@style/EditTextStyle"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:layout_marginStart="@dimen/dp_5"
                    android:singleLine="true"
                    android:textColor="@color/black33333"
                    android:textColorHint="@color/text_gray_E5E5E5"
                    android:textSize="@dimen/sp_14"/>
                <LinearLayout
                    android:id="@+id/layout_btn_chooseArea"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="@dimen/dp_5">
                    <ImageView
                        android:id="@+id/iv_merchantaddress"
                        android:layout_width="@dimen/dp_25"
                        android:layout_height="@dimen/dp_25"
                        android:src="@mipmap/img_ioc_location"/>
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@drawable/bg_white_radius_4dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_10"
                    android:text="@string/text_store_data_floorspace"
                    android:textColor="@color/black33333"
                    android:textSize="@dimen/sp_14" />

                <com.hjq.widget.view.RegexEditText
                    android:id="@+id/et_store_data_floorspace"
                    style="@style/EditTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:hint="@string/input_store_data_floorspace"
                    android:paddingVertical="@dimen/dp_10"
                    android:singleLine="true"
                    android:textColor="@color/black33333"
                    android:textColorHint="@color/text_gray_E5E5E5"
                    android:textSize="@dimen/sp_14" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@drawable/bg_white_radius_4dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_10"
                    android:text="@string/text_store_data_code"
                    android:textColor="@color/black33333"
                    android:textSize="@dimen/sp_14" />

                <com.hjq.widget.view.RegexEditText
                    android:id="@+id/et_store_data_code"
                    style="@style/EditTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:hint="@string/input_store_data_code"
                    android:maxLength="11"
                    android:paddingVertical="@dimen/dp_10"
                    android:singleLine="true"
                    android:textColor="@color/black33333"
                    android:textColorHint="@color/text_gray_E5E5E5"
                    android:textSize="@dimen/sp_14"
                    app:regexType="number" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@drawable/bg_white_radius_4dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/dp_10"
                    android:layout_marginStart="@dimen/dp_10"
                    android:text="@string/text_store_data_otherdetails" />

                <com.hjq.widget.view.RegexEditText
                    android:id="@+id/et_store_data_otherdetails"
                    style="@style/EditTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_120"
                    android:gravity="start"
                    android:hint="@string/input_store_data_otherdetails"
                    android:maxLength="15"
                    android:paddingVertical="@dimen/dp_10"
                    android:singleLine="true"
                    android:textColor="@color/black33333"
                    android:textColorHint="@color/text_gray_E5E5E5"
                    android:textSize="@dimen/sp_14"
                    app:regexType="nonnull" />

            </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_store_data_commit"
                style="@style/ButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp_40"
                android:layout_marginVertical="@dimen/dp_30"
                android:text="@string/common_step_commit" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>