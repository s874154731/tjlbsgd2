<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/dp_20"
    android:background="@drawable/bg_white_radius_4dp"
    android:padding="@dimen/dp_20">
    <TextView
        android:id="@+id/tv_top_tip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:text="您需要阅读并同意隐私协议政策，才可以继续使用本应用。"
        android:textColor="@color/black33333"
        android:textSize="@dimen/sp_14"/>

    <TextView
        android:id="@+id/tv_btn_greement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_top_tip"
        android:layout_marginTop="@dimen/dp_10"
        android:padding="@dimen/dp_10"
        android:text="同意"
        android:textSize="@dimen/sp_14"
        android:textColor="@color/common_accent_color"/>
    <TextView
        android:id="@+id/tv_btn_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toLeftOf="@+id/tv_btn_see"
        app:layout_constraintBottom_toBottomOf="@+id/tv_btn_greement"
        android:layout_marginTop="@dimen/dp_10"
        android:padding="@dimen/dp_10"
        android:text="取消"
        android:textSize="@dimen/sp_14"
        android:textColor="@color/common_accent_color"/>
    <TextView
        android:id="@+id/tv_btn_see"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/tv_btn_greement"
        android:layout_marginTop="@dimen/dp_10"
        android:padding="@dimen/dp_10"
        android:text="去看看"
        android:textSize="@dimen/sp_14"
        android:textColor="@color/common_accent_color"/>

</androidx.constraintlayout.widget.ConstraintLayout>